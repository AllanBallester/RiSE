<h5 class="sign-in-title"> <%= t("sign-up") %> </h5>




<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs sign-in-text">
        <%= f.input :name, required: true, autofocus: true %>
        <%= f.input :last_name, required: true %>
        <%= f.input :email, required: true %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t("sign-up2") , class:"btn-yours btn-signup" %>
      </div>
      <% end %>

       <div class = "btn-facebookk">
        <img src="https://res.cloudinary.com/dk9kkvy1o/image/upload/v1548846770/social_facebook_box_white_zeapud.png" class="favicon2" />
      <%= link_to "Continue with Facebook", riser_facebook_omniauth_authorize_path, :class => "btn-fb-white" %>
      </div>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
