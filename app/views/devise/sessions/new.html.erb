<h5 class="sign-in-title"> <%= t("login") %> </h5>

<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-inputs sign-in-text">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to t("forgot-password"), new_password_path(resource_name) %>
<!--         <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
 -->        <% end -%>
      </div>

      <div class="form-actions ">
        <%= f.button :submit, "Log in", class:"btn-yours btn-login" %>
      </div>
      <% end %>

      <%- if controller_name != 'sessions' %>
      <%= link_to "Log in", new_session_path(resource_name) %><br />
      <% end -%>

      <div class = "btn-facebookk">
        <img src="https://res.cloudinary.com/dk9kkvy1o/image/upload/v1548846770/social_facebook_box_white_zeapud.png" class="favicon2" />
      <%= link_to "Log in with Facebook", riser_facebook_omniauth_authorize_path, :class => "btn-fb-white" %>
      </div>

      <%= render "devise/shared/links" %>


    </div>
  </div>
</div>
