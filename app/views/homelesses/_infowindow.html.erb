<div class="infowindow">
  <% if homeless.photos.present? %>
  <%= image_tag homeless.photos.last.picture, class: "avatar" %>
  <%else %>
  <%= image_tag "https://i.stack.imgur.com/HQwHI.jpg", class: "avatar" %>
  <%end %>

  <div>
    <p><%= homeless.nickname %></p>
    <% if homeless.position_histories.any? %>
    <p class="modalito"> <i class="fa fa-refresh" aria-hidden="true"></i>
 : <%= time_ago_in_words homeless.position_histories.last&.created_at %> <%= t("ago") %> </p>
    <% else %>
    <p class="modalito"> <i class="fa fa-refresh" aria-hidden="true"></i>
 : <%= time_ago_in_words homeless.updated_at %> <%= t("ago") %> </p>
    <% end %>

    <%= link_to t("view-modal"), homeless_path(homeless), class: "btn btn-yours" %>
  </div>
</div>
